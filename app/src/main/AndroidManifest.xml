<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chinmay.movieapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main.MainTabActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".moviedetails.MovieDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.MainTabActivity" />
        </activity>
        <activity
            android:name=".moviedetails.ImageActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".moviedetails.MovieDetailsActivity" />
        </activity>
        <activity
            android:name="com.chinmay.movieapp.MovieItemListActivity"
            android:windowSoftInputMode="stateUnchanged"
            android:parentActivityName=".MovieAppActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MovieAppActivity" />
        </activity>

        <activity
            android:name="com.chinmay.movieapp.MovieItemDetailActivity"
            android:label="@string/title_movieitem_detail"
            android:parentActivityName=".MovieItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MovieItemListActivity" />
        </activity>
    </application>

</manifest>
